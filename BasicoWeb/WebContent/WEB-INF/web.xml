<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
	<display-name>BasicoWeb</display-name>
	
	<servlet><!-- Definición del servlet -->
		<servlet-name>Pepe</servlet-name><!-- Alias -->
		<servlet-class>servlet.HolaMundoDDServlet</servlet-class>
	</servlet>

	<servlet-mapping><!-- Definición del mapping -->
		<servlet-name>Pepe</servlet-name>
		<url-pattern>/HolaMundoDD</url-pattern>
	</servlet-mapping>
	<servlet-mapping><!-- Definición del mapping -->
		<servlet-name>Pepe</servlet-name>
		<url-pattern>/MappingDePepe</url-pattern>
	</servlet-mapping>
	
	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>

	<welcome-file-list>
		<welcome-file>HolaMundo</welcome-file>
	</welcome-file-list>
	
</web-app>